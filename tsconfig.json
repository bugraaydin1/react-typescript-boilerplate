{
	"compilerOptions": {
		"outDir": "build/dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "es6",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"strict": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "dist", "jest"]
}
